def calculus1t():
    frame = Frame(root, width=500, height=700, bg='white')
    frame.grid(row=0,column=0)
    label = Label(frame, text="Important Calculus 1 Theorems and Examples", bg="white")
    label.pack()
    canvas = Canvas(frame, width=500, height=700, bg='white', scrollregion=(0,0,2000,2000))
    hbar = Scrollbar(frame, orient=HORIZONTAL)
    hbar.pack(side=BOTTOM, fill=X)
    hbar.config(command=canvas.xview)
    vbar = Scrollbar(frame, orient=VERTICAL)
    vbar.pack(side=RIGHT, fill=Y)
    vbar.config(command=canvas.yview)
    canvas.config(width=750, height=300)
    canvas.config(xscrollcommand=hbar.set, yscrollcommand=vbar.set)
    canvas.pack(side=LEFT, expand=True, fill=BOTH)

    button1 = Button(canvas, text="See Examples", activeforeground='white', activebackground='gray', command=c1_examples)
    button1.place(x=660, y=15)
    button2 = Button(canvas, text="Unit 1", activeforeground="white", activebackground='gray', command=c1_unit_1)
    button2.place(x=700, y=50)
    button3 = Button(canvas, text="Unit 2", activeforeground="white", activebackground='gray', command=c1_unit_2)
    button3.place(x=700, y=75)
    button4 = Button(canvas, text="Unit 3", activeforeground="white", activebackground='gray', command=c1_unit_3)
    button4.place(x=700, y=100)
    img = PhotoImage(file="")
    canvas.create_image(10, 10, anchor=NW, image=img)
    root.mainloop()


