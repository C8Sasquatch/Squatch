from tkinter import *
import webbrowser

# physics button functions
def p_examples():
    frame = Frame(root, width=500, height=700, bg='white')
    frame.grid(row=0, column=0)
    label = Label(frame, text="Examples", bg="white")
    label.pack()
    canvas = Canvas(frame, width=500, height=700, bg='white', scrollregion=(0, 0, 2000, 2000))

    hbar = Scrollbar(frame, orient=HORIZONTAL)
    hbar.pack(side=BOTTOM, fill=X)
    hbar.config(command=canvas.xview)
    vbar = Scrollbar(frame, orient=VERTICAL)
    vbar.pack(side=RIGHT, fill=Y)
    vbar.config(command=canvas.yview)
    canvas.config(width=750, height=300)
    canvas.config(xscrollcommand=hbar.set, yscrollcommand=vbar.set)
    canvas.pack(side=LEFT, expand=True, fill=BOTH)

    #canvas = Canvas(frame, width=500, height=700, bg='white', scrollregion=(0, 0, 2000, 2000))
    button_back = Button(text="Back", activeforeground='white', activebackground='gray', command=physicst)
    button_back.place(x=715, y=25)
def p_unit_1():
    frame = Frame(root, width=500, height=700, bg='white')
    frame.grid(row=0, column=0)
    label = Label(frame, text='Physics Unit 1', bg='white')
    label.pack()
    canvas = Canvas(frame, width= 500, height=700, bg='white', scrollregion=(0, 0, 2000, 2000))

    hbar = Scrollbar(frame, orient=HORIZONTAL)
    hbar.pack(side=BOTTOM, fill=X)
    hbar.config(command=canvas.xview)
    vbar = Scrollbar(frame, orient=VERTICAL)
    vbar.pack(side=RIGHT, fill=Y)
    vbar.config(command=canvas.yview)
    canvas.config(width=750, height=300)
    canvas.config(xscrollcommand=hbar.set, yscrollcommand=vbar.set)
    canvas.pack(side=LEFT, expand=True, fill=BOTH)

    button_back = Button(text="Back", activeforeground='white', activebackground='gray', command=physicst)
    button_back.place(x=715, y=25)
    img = PhotoImage(file="physics_unit_1.png")
    canvas.create_image(50, 50, anchor=NW, image=img)
    root.mainloop()
